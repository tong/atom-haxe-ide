{
    "name": "xxx",
    "version": "0.7.0",
    "description": "Sex with haxe",
    "keywords": ["haxe","ide","xxx"],
    "repository": "https://github.com/tong/atom-xxx",
    "license": "MIT",
    "engines": {
        "atom": ">=1.11.1 .0 <2.0.0"
    },
    "dependencies": {
        "language-haxe": "^0.5.2"
    },
    "main": "./lib/xxx",
    "configSchema": {
        "Haxe Server": {
            "type": "object",
            "properties": {
                "haxe_path": {
                    "title": "Haxe Path",
                    "description": "Path to your haxe executable file",
                    "type": "string",
                    "default": "haxe"
                },
                "haxe_server_startdelay":{
                    "title": "Haxe Server Activation Delay",
                    "description": "The delay in seconds before starting the haxe server.",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 3,
                    "default": 1
                }
            }
        }
    },
    "consumedServices": {
        "status-bar": { "versions": { "^1.0.0": "consumeStatusBar" } }
    },
    "providedServices": {
        "autocomplete.provider": {
            "versions": {
                "2.0.0": "provideAutoCompletion"
            }
        },
        "haxe": {
            "description": "Provides access to haxe compiler",
            "versions": {
                "0.1.0": "provideService"
            }
        }
    }
}
