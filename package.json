{
    "name": "xxx",
    "version": "0.5.1",
    "description": "Sex with haxe",
    "keywords": ["haxe","ide"],
    "repository": "https://github.com/tong/atom-xxx",
    "license": "MIT",
    "engines": {
        "atom": ">=1.8.0 <2.0.0"
    },
    "dependencies": {
        "language-haxe": "^0.4.3"
    },
    "main": "./lib/xxx",
    "configSchema": {
        "haxe_path": {
            "title": "Haxe Path",
            "description": "Path to your haxe executable",
            "type": "string",
            "default": "haxe"
        },
        "haxe_server_port": {
            "title": "Haxe Server Port",
            "description": "The port number the haxe server will listen on.",
            "type": "integer",
            "default": 5500
        },
        "haxe_server_startdelay":{
            "title": "Haxe Server Activation Delay",
            "description": "The delay in seconds before starting the haxe server.",
            "type": "integer",
            "minimum": 0,
            "default": 2
        },
        "haxe_server_autostart":{
            "title": "Haxe Server Autostart",
            "description": "Start the haxe server automatically.",
            "type": "boolean",
            "default": true
        }
    },
    "consumedServices": {
        "status-bar": { "versions": { "^1.0.0": "consumeStatusBar" } }
    },
    "providedServices": {
        "autocomplete.provider": {
            "versions": {
                "2.0.0": "provideAutoCompletion"
            }
        }
    }
}
